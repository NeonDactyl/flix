<h1>Profile for <%= @user.name %></h1>
<p>
<%= @user.email %>
</p>
<footer>
  <nav>
    <% if current_user?(@user) %>
      <%= link_to "Edit Profile", edit_user_path(@user), class: "button" %>
      <%= link_to "Delete Account", @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %>
    <% end %>
  </nav>
</footer>
