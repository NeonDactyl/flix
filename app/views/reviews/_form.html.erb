<%= form_for([@movie, @review]) do |f| %>
  <%= render 'shared/errors', object: @review %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </li>
      <li class="required">
        <%= f.label :stars %>
        <%= f.select :stars, Review::STARS, prompt: "Pick one" %>
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment %>
      </li>
    </ol>
    <p>
      <%= f.submit %>
      <%= link_to "Cancel", movie_reviews_path, class: 'button' %>
    </p>
  </fieldset>
<% end %>
